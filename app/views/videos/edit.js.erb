$('.video-edit-form').toggle().html("<%= escape_javascript(render partial: 'videos/edit') %>")

$('#video-title-form').focus();
var videoTitle = $('#video-title-form').val();
$('#video-title-form').val('');
$('#video-title-form').val(videoTitle);

$('.video-edit').on('submit', function(){
  var title = $('#video-title-form').val();
  $('#video-title').text(title);
  $('.video-edit-form').toggle();
})

$('#reload').on('click', function(){
  location.reload();
})
