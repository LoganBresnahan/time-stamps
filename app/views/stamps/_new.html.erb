
<div class='stamp-form'>
  <%= form_for :stamp, url: stamps_path, remote: true, id: 'stamp-form' do |f| %>
    <div class='row'>
      <div class='col s1'><div id='get-time' class="btn-floating btn waves-effect waves-light green", title='add'><i class="material-icons">add</i></div></div>
      <div class='col s3'>
        <%= f.text_field :time, placeholder: "time", id: 'time-input' %>
      </div>
    </div>
    <div class='row'>
      <div class='col s11'>
        <div class='input-field'>
            <%= f.text_area :body, placeholder: "body", id: 'textarea1', class: 'materialize-textarea' %>
        </div>
        <div>
          <%= f.hidden_field :note_id, value: @note.id %>
        </div>
      </div>
      <div class='col s1'>
        <%= button_tag class: "btn-floating btn waves-effect waves-light yellow", title: 'submit' do %>
          <i class='large material-icons'>done</i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
