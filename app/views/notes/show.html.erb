<div class='row'>
  <div class='col s6'>
    <header class='boxed-edit'>
      <h3 id='note-show-title'> <%= @note.title %> </h3>
      <p id='note-edit-link'> <%= link_to ("<i class='large material-icons'>mode_edit</i>").html_safe, edit_note_path(@note), remote: true, class: "btn-floating btn waves-effect waves-light blue", title: 'edit' %> </p>
    </header>
    <div class='note-edit-form' style="display:none;"></div>

    <div>
      <% @note.videos.each do |video| %>
        <div>
          <div id="player"></div>
        </div>
        <div class='row'>
          <div class='col s6'><h5 id='video-title'><%= video.title %></h5></div>
          <div class='col s1'>
            <%= link_to ("<i class='large material-icons'>mode_edit</i>").html_safe, edit_video_path(video), class: "btn-floating btn waves-effect waves-light blue", title: 'edit' %>
          </div>
          <div class='col s1'>
            <%= link_to ("<i class='large material-icons'>delete</i>").html_safe, video, method: :delete, url: video_path(video.id), data: { confirm: "are you sure?" }, class: "btn-floating btn waves-effect waves-light red", title: 'delete' %>
          </div>
        </div>
      <% end %>
    </div>

    <% if @note.videos.size < 1 %>
      <div>
        <%= render '/videos/new' %>
      </div>
    <% end %>

    <div>
      <%= render '/stamps/new' %>
    </div>
  </div>

  <div class='col s6'>
    <div class='stamp-show-list' style:"display:none;"></div>
      <% @note.stamps.each do |stamp| %>
        <div class='row'>
          <ul>
            <li>
              <div class='col s10'>
                <div class='row'>
                  <div class='col s2'><div class='chip'><%= stamp.time %></div></div>
                  <div class='col s10'><div class='wordwrap'><%= stamp.body %></div></div>
                </div>
              </div>
              <div class='col s1'>
                <%= link_to ("<i class='large material-icons'>mode_edit</i>").html_safe, edit_stamp_path(stamp), class: "btn-floating btn-small waves-effect waves-light blue", title: 'edit' %>
              </div>
              <div class='col s1'>
                <%= link_to ("<i class='large material-icons'>delete</i>").html_safe, stamp, url: stamp_path(stamp.id), method: :delete, data: { confirm: "are you sure?" }, class: "btn-floating btn-small waves-effect waves-light red", title: 'delete' %>
              </div>
          </li>
          </ul>
        </div>
      <% end %>
    </div>

</div>
