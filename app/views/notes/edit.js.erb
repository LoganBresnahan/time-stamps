$('.note-edit-form').toggle().html("<%= escape_javascript(render partial: 'notes/edit') %>");

$('.edit').ready(function(){
  $('#note-title').focus();
  var savedInput = $('#note-title').val();
  $('#note-title').val('');
  $('#note-title').val(savedInput);
});

$('.edit').on('submit', function(){
  var title = $('#note-title').val();
  $('#note-show-title').text(title);
  $('.note-edit-form').toggle();
});


