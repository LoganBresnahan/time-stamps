<h6>Make changes to your note.</h6>

<div class='edit'>
  <%= form_for :note, method: :put, url: note_path, id: "note-edit-form", remote: true do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "#{@note.title}" %>
    </div>
    <div>
      <%= f.submit "commit changes" %>
    </div>
  <% end %>
  <%= render partial: 'notes/delete' %>
</div>
